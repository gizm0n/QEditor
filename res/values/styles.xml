<resources>

	<style name="GreenDroid.Widget.ActionBar">
		<item name="android:background">?attr/gdActionBarBackground</item>
		<item name="android:layout_height">@dimen/gd_action_bar_height</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="dividerDrawable">?attr/gdActionBarDividerDrawable</item>
		<item name="dividerWidth">?attr/gdActionBarDividerWidth</item>
		<item name="homeDrawable">@drawable/icon_back</item>		
		<item name="android:visibility">gone</item>
	</style>	
	
	<style name="GreenDroid.Widget.TabIndicator">
		<item name="android:layout_height">?attr/gdTabIndicatorHeight</item>
		<item name="android:textAppearance">?attr/gdTabIndicatorTextAppearance</item>
		<item name="android:textColor">@color/cwhite</item>
		<item name="android:background">?attr/gdTabIndicatorBackground</item>
	</style>
	
	<style name="GreenDroid.Widget.ItemView.TextItemView">
		<item name="android:textAppearance">?attr/gdTextAppearanceLarge</item>
		<item name="android:layout_height">40dip</item>
		<item name="android:background">@color/cgrey6</item>
		<item name="android:textSize">15sp</item>
		<item name="android:layout_marginLeft">20dip</item>
		
	</style>
	
	<style name="GreenDroid.Widget.ItemView.DrawableItemView" />
	<style name="GreenDroid.Widget.ItemView.DrawableItemView.Drawable">
		<item name="android:layout_width">?attr/gdDrawableWidth</item>
		<item name="android:layout_height">60dip</item>
		<item name="android:layout_marginRight">?attr/gdDrawableMargin</item>
		<item name="android:textAppearance">?attr/gdTextAppearanceLarge</item>
		<item name="android:scaleType">center</item>
	</style>
	<style name="GreenDroid.Widget.ItemView.DrawableItemView.Text">
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/cblack</item>
	</style>


	<style name="GreenDroid.Widget.ItemView.ThumbnailItemView" />
	<style name="GreenDroid.Widget.ItemView.ThumbnailItemView.Text">
		<item name="android:layout_height">?attr/gdItemViewPreferredHalfHeight</item>
		<item name="android:textSize">14dip</item>
		<item name="android:textColor">@color/cblack</item>
	</style>
	<style name="GreenDroid.Widget.ItemView.ThumbnailItemView.Subtitle">
		<item name="android:layout_height">?attr/gdItemViewPreferredHalfHeight</item>
		<item name="android:textAppearance">?attr/gdTextAppearanceSmall</item>
	</style>
	<style name="GreenDroid.Widget.ItemView.ThumbnailItemView.Thumbnail">
		<item name="android:layout_width">?attr/gdItemViewPreferredHeight</item>
		<item name="android:paddingTop">?attr/gdDrawableMargin</item>
		<item name="android:layout_marginRight">?attr/gdDrawableMargin</item>
	</style>
	<style name="GreenDroid.Widget.ItemView.TextItemView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/cblack</item>
	</style>	
		
    <style name="SeparatorItemView" parent="GreenDroid.Widget.ItemView.SeparatorItemView">
        <item name="android:background">@drawable/separator_bg</item>
    </style>

	<style name="GreenDroid.Widget.ItemView.SeparatorItemView">
		<item name="android:background">@color/cgrey6</item>
		<item name="android:textAppearance">?attr/gdTextAppearanceSeparator</item>
		<item name="android:textColor">@color/cblack</item>
		
		<item name="android:paddingLeft">40dp</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
	</style>
	
	<!-- Styles for the ProgressItemView -->
	<style name="GreenDroid.Widget.ItemView.ProgressItemView" />
	<style name="GreenDroid.Widget.ItemView.ProgressItemView.ProgressBar">
		<item name="android:layout_width">?attr/gdProgressBarWidth</item>
		<item name="android:layout_height">?attr/gdProgressBarHeight</item>
		<item name="android:layout_marginRight">?attr/gdDrawableMargin</item>
	</style>
	<style name="GreenDroid.Widget.ItemView.ProgressItemView.Text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/cblack</item>
    </style>
	
	    
    <style name="gdTextAppearanceLarge" parent="@style/TextAppearance.Large">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/cblack</item>
    </style>
	<style name="prompt_title">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_marginLeft">18sp</item>
		<item name="android:layout_marginRight">18sp</item>
		<item name="android:gravity">left</item>		
	</style>	
	<style name="prompt_value">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_margin">10dip</item>
		<item name="android:scrollHorizontally">true</item>
		<item name="android:autoText">false</item>		
		<item name="android:capitalize">none</item>		
		<item name="android:gravity">fill_horizontal</item>		
		<item name="android:gravity">fill_horizontal</item>		
	</style>    

	<style name="null_button">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/cwhite</item>
        <item name="android:textStyle">bold</item>
    </style>	
	<style name="blue_button">
        <item name="android:background">@drawable/blue_button_selector</item>
        <item name="android:textColor">@color/cwhite</item>
        <item name="android:textStyle">bold</item>
    </style>

	<style name="p_line">
		<item name="android:background">@drawable/horizontal_separation_line</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">1.0dip</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_margin">10dip</item>		
	</style>
    <style name="LinkText_Mid" parent="@style/TextAppearance.Large">
        <item name="android:textSize">16dp</item>
        <item name="android:textColorLink">@color/link</item>
        <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
    </style>
    	
	<style name="LinkText_Large" parent="@style/TextAppearance.Large">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorLink">@color/link</item>
        <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
    </style>
    <!--market-->
    <style name="HeaderText">
        <item name="android:textColor">@color/header_text</item>
        <item name="android:shadowColor">@color/title_bar_shadow</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">2.75</item>
    </style>
    <style name="gridBox_nb">	
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">5dip</item>
		<item name="android:layout_marginBottom">5dip</item>
		<item name="android:layout_marginLeft">10dip</item>
		<item name="android:layout_marginRight">10dip</item>
		
		<item name="android:paddingLeft">10dip</item>
		<item name="android:paddingRight">10dip</item>
		<item name="android:paddingTop">5dip</item>
		
	</style>
	<style name="gridBox">
		<item name="android:background">@drawable/panel_bg</item>
	
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">5dip</item>
		<item name="android:layout_marginBottom">5dip</item>
		<item name="android:layout_marginLeft">10dip</item>
		<item name="android:layout_marginRight">10dip</item>
		
		<item name="android:paddingLeft">10dip</item>
		<item name="android:paddingRight">10dip</item>
		<item name="android:paddingTop">10dip</item>
		
	</style>
	
	<style name="gridBox_text">
		<item name="android:textSize">15dp</item>
		<item name="android:textColor">#000000</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>

	</style>	
	<style name="gridBox_Title">
		<item name="android:textSize">15dp</item>
		<item name="android:textColor">#FF7D899D</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">10dip</item>
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_alignParentTop">true</item>
	</style>
	<style name="gridBox_Value">
		<item name="android:textSize">15dp</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">10dip</item>
	</style>	 
		<style name="gridBox_desc">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:textColor">#FF7D899D</item>
		<item name="android:layout_marginLeft">10dip</item>		
		<item name="android:layout_marginRight">10dip</item>		
	</style>
	<style name="gridBox_LTag">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginTop">5dp</item>		
	</style>	
	<style name="gridBox_RTag">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_marginRight">5dp</item>
		<item name="android:layout_marginTop">5dp</item>		
	</style>	
	<style name="blue_button">
        <item name="android:background">@drawable/blue_button_selector</item>
        <item name="android:textColor">@color/cblack</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="blue_button.full">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>    
              
</resources>